{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@fundamentalconf/admin/feature-control-dashboard": [
        "libs/admin/feature-control-dashboard/src/index.ts"
      ],
      "@fundamentalconf/admin/feature-user-management": [
        "libs/admin/feature-user-management/src/index.ts"
      ],
      "@fundamentalconf/admin/util-user-stats": [
        "libs/admin/util-user-stats/src/index.ts"
      ],
      "@fundamentalconf/awesome-ui/feature-cart": [
        "libs/awesome-ui/feature-cart/src/index.ts"
      ],
      "@fundamentalconf/awesome-ui/feature-products": [
        "libs/awesome-ui/feature-products/src/index.ts"
      ],
      "@fundamentalconf/awesome-ui/models-product": [
        "libs/awesome-ui/models-product/src/index.ts"
      ],
      "@fundamentalconf/shared/util-format-number": [
        "libs/shared/util-format-number/src/index.ts"
      ]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
